/**
 * Core Styles - CSS Variables, Fonts, Typography, and Base Elements
 * Part of the Qualia-NSS modular CSS architecture
 */


/* CSS Variables for Theming */
:root {
    --bg-color: #121212;
    --text-color: #e0e0e0;
    --panel-bg-color: #1e1e1e;
    --panel-bg-color-rgb: 30, 30, 30;
    --panel-border-color: #333;
    --primary-color: #28a745;      /* Green from qoder.com example, aligns with clover */
    --primary-color-hover: #218838; /* A darker shade for hover states */
    --muted-text-color: #888;
    --neutral-text-color: #aaa;
    --danger-color: #dc3545;
    --button-hover-bg: #444;
}

body.light-theme {
    --bg-color: #f4f4f9;
    --text-color: #333333;
    --panel-bg-color: #ffffff;
    --panel-bg-color-rgb: 255, 255, 255;
    --panel-border-color: #dddddd;
    --primary-color: #28a745;
    --primary-color-hover: #218838;
    --muted-text-color: #666;
    --neutral-text-color: #777;
    --danger-color: #dc3545;
    --button-hover-bg: #666;
}

/* Import Google Fonts for Qualia-NSS branding */

/* General Styles */
body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    margin: 0;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.2s ease, color 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100vh; /* Constrain to viewport height */
    height: 100dvh; /* Dynamic viewport height for mobile browsers */
    overflow: hidden; /* Prevent body from scrolling */
    font-size: 0.85rem;
    
    /* Mobile PWA optimizations */
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -webkit-tap-highlight-color: transparent;
    
    /* iOS safe area support */
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    padding-left: env(safe-area-inset-left);
    padding-right: env(safe-area-inset-right);
}

/* Typography */
h1, .h1 { font-size: 1.5rem; margin-bottom: 0.75rem; font-weight: 600; }

h2, .h2 { font-size: 1.2rem; margin-bottom: 0.6rem; font-weight: 600; }

h3, .h3 { font-size: 1.0rem; margin-bottom: 0.5rem; font-weight: 600; }

h4, .h4 { font-size: 0.9rem; margin-bottom: 0.4rem; font-weight: 600; }

h5, .h5 { font-size: 0.8rem; margin-bottom: 0.3rem; font-weight: 500; }

h6, .h6 { font-size: 0.75rem; margin-bottom: 0.25rem; font-weight: 500; }

p { font-size: 0.85rem; margin: 0.4rem 0; line-height: 1.4; }

a {
    color: var(--primary-color);
    text-decoration: none;
}
a:hover {
    color: var(--primary-color-hover);
}

/* Footer */
footer {
    text-align: center;
    padding: 0.25rem;
    background-color: var(--panel-bg-color);
    border-top: 1px solid var(--panel-border-color);
    color: var(--muted-text-color);
    font-size: 0.6rem;
}